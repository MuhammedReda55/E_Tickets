@model CartWithTotalPriceVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .ticket-container {
            max-width: 900px;
            margin: 50px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .ticket-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .ticket-header h1 {
                font-size: 28px;
                color: #343a40;
            }

            .ticket-header p {
                font-size: 14px;
                color: #6c757d;
            }

        .ticket-details {
            font-size: 16px;
        }

            .ticket-details .detail-label {
                font-weight: bold;
                color: #495057;
            }

        .divider {
            border-top: 2px dashed #dee2e6;
            margin: 20px 0;
        }

        .ticket-footer {
            text-align: center;
            margin-top: 20px;
        }

        .btn-print {
            width: 150px;
        }

        .movie-image {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .ticket-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .ticket-details-wrapper {
            flex: 1;
            margin-right: 20px;
        }

        .ticket-image-wrapper {
            flex-shrink: 0;
            max-width: 200px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="ticket-container">
            <div class="ticket-header">
                <h1>🎟️ Ticket Details</h1>
                <p>Thank you for your booking!</p>
            </div>

            <!-- Display User Info -->
            <div class="ticket-details">
                <p><span class="detail-label">User Name:</span> @Model.UserName</p>
            </div>

            @foreach (var item in Model.Carts)
            {
                <div class="ticket-row">
                    <!-- Details Section -->
                    <div class="ticket-details-wrapper">
                        <p><span class="detail-label">Movie Name:</span> @item.Movie.Name</p>
                        <p><span class="detail-label">Cinema Name:</span> @item.Movie.Cinema.Name</p>
                        <p><span class="detail-label">Date:</span> @item.Time</p>
                        <p><span class="detail-label">Quantity:</span> @item.Count</p>
                    </div>

                    <!-- Movie Image Section -->
                    <div class="ticket-image-wrapper">
                        <img src="~/movies/@item.Movie.ImgUrl" alt="@item.Movie.Name" class="movie-image" />
                    </div>
                </div>
                <hr />
            }

            <!-- Total Price -->
            <div class="ticket-details">
                <p><span class="detail-label">Total Price:</span> @Model.TotalPrice</p>
            </div>

            <div class="divider"></div>

            <div class="ticket-footer">
                <button class="btn btn-primary btn-print" onclick="window.print()">Print Ticket</button>
                <a href="/Home/Index" class="btn btn-secondary btn-print">Back to Home</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model E_Tickets.Models.ViewModels.ApplicationUserVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .profile-header {
            background: #4267B2;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

        .profile-img {
            position: relative;
            display: inline-block;
        }

            .profile-img img {
                width: 150px;
                height: 150px;
                border: 5px solid #fff;
                border-radius: 50%;
                object-fit: cover;
            }

        .edit-img {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.6);
            color: #fff;
            padding: 5px 8px;
            border-radius: 50%;
            cursor: pointer;
        }

        .user-info {
            margin-top: 10px;
        }

            .user-info h2 {
                margin: 10px 0;
                font-size: 28px;
                font-weight: bold;
            }

            .user-info p {
                font-size: 16px;
                color: #666;
            }

        .buttons {
            margin-top: 20px;
        }

            .buttons .btn {
                margin-right: 10px;
            }

        .content-section {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <!-- Profile Header -->
    <div class="profile-header">
        <div class="container">
            <div class="profile-img">
                <img src="https://via.placeholder.com/150" alt="Profile Picture">
                <div class="edit-img">
                    <i class="fas fa-camera"></i>
                </div>
            </div>
            <div class="user-info">
                <h2></h2>
                <p>Software Developer at TechCompany</p>
            </div>
            <div class="buttons">
                <button class="btn btn-light"><i class="fas fa-edit"></i> Edit Profile</button>
                <button class="btn btn-primary"><i class="fas fa-upload"></i> Upload Photo</button>
            </div>
        </div>
    </div>

    <!-- Profile Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="content-section">
                    <h5>About Me</h5>
                    <p>Hi, I'm John Doe, a passionate software developer with over 5 years of experience in web and app development. I love building user-friendly applications.</p>
                </div>
            </div>
            <div class="col-md-8">
                <div class="content-section">
                    <h5>Recent Activities</h5>
                    <ul>
                        <li>Posted a new photo yesterday.</li>
                        <li>Started a new project with XYZ Team.</li>
                        <li>Attended a tech conference last week.</li>
                        <li>Updated profile details two days ago.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@model List<Cinema>

@section Scripts {
    @if (TempData["message"] != null)
    {
        <script>
            toastr.success('@TempData["message"]')
        </script>
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        table {
            width: 50%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        td a {
            color: blue;
            text-decoration: none;
        }

            td a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h1 class="text-warning">Cinema</h1>
    <div class="row mb-2">
        <a style="width:20%" class="btn btn-primary" href="/Cinema/Create"> <i class="bi bi-plus-circle"></i> Create New Category</a>
    </div>
    <table>
        <thead>
            <tr>
                <th class="text-danger">Name</th>
                <th class="text-danger">Movies</th>
                @* <th class="text-danger">Description</th> *@

                <th class="text-danger">Address</th>

                <th class="text-danger">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a class="text-success" href="/Cinema/AllMoviesCinema?cinemaId=@item.Id">All Movies</a></td>
                    @* <td>@item.Description</td> *@
                    <td>@item.Address</td>
                    <td>
                        <a href="/Cinema/Edit?cinemaId=@item.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="/Cinema/Delete?id=@item.Id"
                           class="btn btn-danger"
                           data-bs-toggle="modal"
                           data-bs-target="#deleteModal"
                           data-id="@item.Id">
                            <i class="bi bi-trash"></i> Delete


                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this cinema?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirmDelete" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        let deleteId = null;

        // Capture the delete button click event to set the ID dynamically
        document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
            button.addEventListener('click', function () {
                deleteId = this.getAttribute('data-id');
            });
        });

        // When the "Delete" button in the modal is clicked
        document.getElementById('confirmDelete').addEventListener('click', function () {
            if (deleteId) {
                // Send a delete request or redirect to the controller action
                window.location.href = `/Cinema/Delete?id=${deleteId}`;
            }
        });
    });
</script>

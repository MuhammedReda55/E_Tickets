@model Actor

<div class="container mt-5">
    <!-- Profile Picture Section -->
    <div class="text-center mb-4">
        <img src="~/cast/@Model.ProfilePicture" class="img-fluid rounded-circle" alt="@Model.FirstName @Model.LastName" style="max-width: 300px; max-height: 300px;" />
    </div>

    <!-- Actor Name Section -->
    <div class="text-center">
        <h2 class="text-success">@Model.FirstName @Model.LastName</h2>
    </div>

    <!-- Bio Section -->
    <div class="mt-3">
        <h5><strong>Bio:</strong> @Model.Bio</h5>
    </div>

    <!-- News Section -->
    <div class="mt-3">
        <h5><strong>Latest News:</strong> @Model.News</h5>
    </div>

    <!-- All Movies Section -->
    <div class="mt-4">
        <h3 class="text-danger"><strong>All Movies:</strong></h3>
        <ul class="list-unstyled">
            @foreach (var item in Model.ActorMovies)
            {
                <li><h5><strong>- @item.Movie.Name</strong></h5></li>
            }
        </ul>
    </div>

    <!-- Social Media Section -->
    <div class="mt-4 text-center">
        <h4><a href="#" class="text-warning">Follow on Social Media</a></h4>
    </div>
</div>
